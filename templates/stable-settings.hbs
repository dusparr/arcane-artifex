<form autocomplete="on">
    <div class="sheet-body flexrow">
        <section>
            <div class="localA1111URL">
                <h2>SERVER IP</h2>
                <div class="form-group">
                    <label>stable diffusion server IP</label>
                    <div class="form-fields">
                        <input name="localA1111URL" type="text"
                            value="{{localA1111URL}}" />
                    </div>
                    <p class="notes">IP adress of your local instance of Stable
                        diffusion</p>
                </div>
            </div>
            <div class="numImages">
            <h2>NUMBER OF IMAGES</h2>
            <div class="form-group">
            <label>Number of images per generation</label>
            <div class="form-fields">
                <input type="range" name="numImages" value="{{numImages}}" min="1" max="4" step="1" />
                <span class="range-value">{{numImages}}</span>
            </div>
            <p class="notes">Specify the number of images to generate per request</p>
            </div>
            <div class="models">
                <h2>MODELS</h2>
                <h4>active model : {{activeModel}}</h4>
                <select id="change-model">
                    <option>change model here</option>
                    {{#each models as |model index|}}
                    <option class="model" value="{{model.title}}">
                        {{model.model_name}}
                    </option>
                    {{/each}}
                </select>
                <p class="note">This may take some time, please wait for changes to appear</p>
            </div>
            <div class="samplers">
                <h2>SAMPLING METHOD</h2>
                <h4>active sampler : {{localA1111Sampler}}</h4>
                <select id="change-sampler">
                    <option>change sampler here</option>
                    {{#each samplers as |sampler|}}
                    <option class = "sampler" value="{{sampler.name}}">
                        {{sampler.name}}
                    </option>
                    {{/each}}
                </select>
            </div>
            <div class="upscalers">
                <h2>UPSCALERS</h2>
                <h4>active upscalar : {{localA1111Upscaler}}</h4>
                <select id="change-upscaler">
                    <option>change upscaler here</option>
                    {{#each upscalers as |upscaler|}}
                    <option class = "upscaler" value="{{upscaler.name}}">
                        {{upscaler.name}}
                    </option>
                    {{/each}}
                </select>
            </div>
            <div class="loras">
            <h2 class="stable-loras">LORAS</h2>

            <div class="form-group">
                <label>Lora Prompt</label>
                <div class="form-fields">
                <textarea name="loraPrompt">{{loraPrompt}}</textarea>
                </div>
                <p class="notes">This text will be inserted after your prompt to trigger your loras</p>
            </div>

            <div class="form-group">
                <label>Loras</label>
                <div class="form-fields">
                {{#each loras as |lora|}}
                    <span class="lora-choice {{#if lora.active}}active{{/if}}">{{lora.alias}}</span>
                {{/each}}
                </div>
            </div>

            <div class="form-group">
                <label>Active Loras</label>
                <div class="form-fields">
                {{#each loras as |lora|}}
                    {{#if lora.active}}
                    <div class="form-group active-lora">
                        <label>{{lora.alias}}</label>
                        <div class="form-fields">
                        <input type="range" name="lora-strength" data-lora-alias="{{lora.alias}}" class="stable-lora-value" value="{{lora.strength}}" min="0" max="2" step="0.05">
                        <span class="range-value">{{lora.strength}}</span>
                        </div>
                    </div>
                    {{/if}}
                {{/each}}
                </div>
            </div>
            </div>


    <div class="sheet-footer">
        <button type="submit">
            <i class="far fa-save"></i>
            {{ localize "Submit"}}

        </button>
    </div>
</form>
