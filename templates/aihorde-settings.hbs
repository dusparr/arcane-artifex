<form autocomplete="on">
    <div class="sheet-body flexrow">
        <section>
            <div class="horde_url">
                <h2>SERVER IP</h2>
                <div class="form-group">
                    <label>AI Horde server IP</label>
                    <div class="form-fields">
                        <input name="horde_url" type="text"
                            value="{{horde_url}}" />

                    </div>
                    <p class="notes">IP adress of AI Horde</p>

                </div>
            </div>
            <div class="horde_url">
                <h2>AI HORDE TOGGLES</h2>
                <div class="form-group">
                    <label>Allow NSFW?</label>
                    <div class="form-fields">
                        <input type="checkbox" name="horde_nsfw" data-dtype="Boolean" {{#if horde_nsfw}}checked{{/if}}>
                        <p class="notes">Allow NSFW images from Horde</p>
                    </div>
                </div>
                <div class="form-group">
                    <label>Sanitize prompts?</label>
                    <div class="form-fields">
                        <input type="checkbox" name="horde_sanitize" data-dtype="Boolean" {{#if horde_sanitize}}checked{{/if}}>
                        <p class="notes">(recommended)</p>
                    </div>
                </div>

                <div class="form-group">
                    <label>Karras</label>
                    <div class="form-fields">
                        <input type="checkbox" name="horde_karras" data-dtype="Boolean" {{#if horde_karras}}checked{{/if}}>
                        <p class="notes">(not all samplers supported)</p>
                    </div>
                </div>
            </div>
            <div class="models">
                <h2>MODELS</h2>
                <h4>active model : {{horde_model}}</h4>
                <select id="change-model" name="horde_model">
                    <option>change model here</option>
                    {{#each horde_models as |model|}}
                        <option class="model" value="{{model.value}}">
                            {{model.text}}
                        </option>
                    {{/each}}
                </select>

            </div>
            <div class="samplers">
                <h2>SAMPLERS</h2>
                <select id="sampler-select" name="horde_sampler">
                    <option value="k_euler">k_euler</option>
                </select>
            </div>
        </section>
        <section class="commons">
            <h2>PROMPTS</h2>
            <div class="form-group">
                <label>CFG SCALE</label>
                <div class="form-fields">
                    <input type="range" name="scale" data-dtype="Number"
                        value="{{scale}}" min="{{scale_min}}" max="{{scale_max}}" step="{{scale_step}}">
                    <span class="range-value">{{scale}}</span>
                </div>


                <p class="notes">How strongly the image should conform to your
                    prompt</p>
            </div>
            <div class="form-group">
                <label>prompt_prefix</label>
                <div class="form-fields">
                    <textarea name="prompt_prefix">{{prompt_prefix}}</textarea>
                </div>
                <p class="notes">text that will be add to each request at the
                    beginning
                    of the prompt</p>
            </div>

            <div class="form-group">
                <label>negative_prompt</label>
                <div class="form-fields">
                    <textarea name="negative_prompt">{{negative_prompt}}</textarea>
                </div>
                <p class="notes">text that will be add to each request as
                    negative
                    prompt</p>

            </div>
            <h2>IMAGES</h2>
            <div class="form-group">
                <label>width</label>
                <div class="form-fields">

                    <input type="range" name="width" data-dtype="Number"
                        value="{{width}}" min="128" max="1024" step="64">
                    <span class="range-value">{{width}}</span>

                </div>

                <p class="notes">width of generated image</p>
            </div>
            <div class="form-group">
                <label>height</label>
                <div class="form-fields">

                    <input type="range" name="height" data-dtype="Number"
                        value="{{height}}" min="128" max="1024" step="64">
                    <span class="range-value">{{height}}</span>

                </div>

                <p class="notes">height of generated image</p>
            </div>
            <div class="form-group">
                <label>sampling steps</label>
                <div class="form-fields">

                    <input type="range" name="steps" data-dtype="Number"
                        value="{{steps}}" min="1" max="80" step="1">
                    <span class="range-value">{{steps}}</span>

                </div>

                <p class="notes">numbers of iterations for image generation</p>
            </div>
            <div class="form-group">
                <label>denoising_strength</label>
                <div class="form-fields">

                    <input type="range" name="denoising_strength" data-dtype="Number"
                        value="{{denoising_strength}}" min="0.1" max="1" step="0.05">
                    <span class="range-value">{{denoising_strength}}</span>

                </div>

                <p class="notes">how far to finish the image</p>
            </div>
            <div class="form-group">
                <label>restore faces</label>
                <div class="form-fields">
                    <input type="checkbox" name="restore_faces" data-dtype="Boolean" {{#if restore_faces}}checked{{/if}}>
                </div>

                <p class="notes">restore faces</p>
            </div>
        </section>

    </div>

    <div class="sheet-footer">
        <button type="submit">
            <i class="far fa-save"></i>
            {{ localize "Submit"}}

        </button>
    </div>

</form>
